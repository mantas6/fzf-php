{
    "name": "mantas6/fzf-php",
    "description": "Interactive fzf command line menus in PHP",
    "keywords": ["php", "fzf", "package", "terminal", "tui", "prompt"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mantas",
            "email": "6524518+mantas6@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.3.0",
        "symfony/console": "^7.0",
        "symfony/process": "^7.0"
    },
    "require-dev": {
        "laravel/pint": "^1.18.3",
        "pestphp/pest": "^3.7.1",
        "pestphp/pest-plugin-type-coverage": "^3.2",
        "phpstan/phpstan": "^1.12.13",
        "rector/rector": "^1.2.10",
        "symfony/var-dumper": "^7.2.0"
    },
    "autoload": {
        "psr-4": {
            "Mantas6\\FzfPhp\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "bin": [
        "bin/fzf-php-install"
    ],
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --coverage --parallel --min=100",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
