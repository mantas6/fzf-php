#!/usr/bin/env php
<?php

$stream = fopen('php://stdin','r');
$input = explode(PHP_EOL, stream_get_contents($stream));

foreach ($argv as $arg) {
    switch ($arg) {
        case '--fake-first':
            echo $input[0];
            exit(0);
        case '--fake-exit-130':
            exit(130);
        case '--fake-exit-2':
            exit(2);
        case '--fake-exit-1':
            exit(1);
    }
}

echo implode(' ', $argv);
echo PHP_EOL;
echo implode(PHP_EOL, $input);
exit(0);
